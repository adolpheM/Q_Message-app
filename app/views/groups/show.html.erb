<h1 style="color: white">Your Contact Group</h1>

<h2>Group Name: <%= @group.name %></h2>

<div style="color: white">
  


<table>
  <h4>
    Group Contacts
  </h4>   
  <tr>
    <th>Name</th>
    <th>Phone Number</th>
  </tr>
<% @group.contacts.each do |group_contact| %>
  <tr>
    <td>
      <%= group_contact.name %>
    </td>

    <td>
      <%= group_contact.phone_number %>
    </td>
    
  </tr>
<% end %>

</table><br>

<%= form_tag "/messages/new?group_id=#{@group.id}", method: :get do  %>
    <div>
      <input type="hidden" name="group_id" class="form_control" value="<%= @group.id %>">
    </div>
    <div>
      <input type="submit" value="Create Message" class="btn btn-default">
    </div>
<% end %>
</div>