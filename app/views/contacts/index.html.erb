<%= form_tag "/groups", method: :post do %>

<h1 style="color: white">All Contacts</h1>
  <table style="color: white">
    <tr>
      <th>Name</th>
      <th>Phone Number</th>

    </tr>

    <%current_user.contacts.each_with_index do |contact, index|%>
    <tr>
      <td>
      <%= contact.name %>
      </td>

      <td>
      <%= contact.phone_number %>
      </td>


      <td>
        
        <%= check_box_tag "contact_ids[]", contact.id, checked = false %>   
      </td>

      <td>
      </td>
    </tr>
    <% end %>
  </table>
        <h4 style="color: darkCyan">
          Group Name <input type="text" name="name">
        </h4> 
        <div>
        <input type="submit" value="Create group">
        </div>
<% end %>
